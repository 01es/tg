<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"
[<!ENTITY % globals SYSTEM "classpath://usermappings/globalsforuserexample.dtd">%globals;]>

<hibernate-mapping default-access="field">
   	
    <class name="&UserRole;" table="USER_ROLE">
        &CommonEntityId;
        &CommonEntityVersion;
		<property name="key" column="ROLE_NO" type="string"/>            
		<property name="desc" column="ROLE_DESC" type="string"/>	       
	</class>        
	
</hibernate-mapping>