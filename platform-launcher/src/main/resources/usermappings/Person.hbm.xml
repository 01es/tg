<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"
[<!ENTITY % globals SYSTEM "classpath://usermappings/globalsforuserexample.dtd">%globals;]>

<hibernate-mapping default-access="field">
   	
    <class name="&Person;" table="PERSON">
        &CommonEntityId;
        &CommonEntityVersion;
		<property name="key" column="PERSON_NO" type="string"/>            
		<property name="desc" column="PERSON_DESC" type="string"/>
		<property name="password" column="PASSWORD" type="string"/>	
		<set name="roles">
			<key column="PERSON_ID"/>
			<one-to-many  class="&UserAndRoleAssociation;"/>
		</set>	
		       
	</class>        
</hibernate-mapping>